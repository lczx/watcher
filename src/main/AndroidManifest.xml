<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="net.hax.niatool">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
            android:allowBackup="true"
            android:label="@string/app_name"
            android:icon="@mipmap/ic_launcher"
            android:roundIcon="@mipmap/ic_launcher"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- To launch activity without showing the rest of the app: https://stackoverflow.com/questions/44559924 -->
        <activity android:name=".CaptureRequestActivity" android:theme="@style/Theme.Transparent"
                  android:launchMode="singleInstance" android:taskAffinity="" android:excludeFromRecents="true"/>

        <service android:name=".OverlayService" android:enabled="true" android:exported="false"/>

    </application>

</manifest>
