<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Additional attributes for application-defined widgets -->

    <attr name="dispatcherRegions" format="reference"/>

    <declare-styleable name="OverlayController">
        <attr name="colorFrame" format="color"/>
        <attr name="colorIcon" format="color"/>
        <attr name="colorButtonCapture" format="color"/>
        <attr name="colorButtonBack" format="color"/>
        <attr name="colorButtonForward" format="color"/>
    </declare-styleable>

    <!-- eu.unipv.epsilon.enigma.ui.widget.TextViewExt -->
    <declare-styleable name="TextViewExt">
        <attr name="localFontFamily" format="string"/>
        <attr name="localFontFamilySuffix" format="string"/>
        <attr name="localFontStyle">
            <enum name="normal" value="0"/>         <!-- Typeface.NORMAL -->
            <enum name="bold" value="1"/>           <!-- Typeface.BOLD -->
            <enum name="italic" value="2"/>         <!-- Typeface.ITALIC -->
            <enum name="bold_italic" value="3"/>    <!-- Typeface.BOLD_ITALIC -->
        </attr>
    </declare-styleable>

</resources>
